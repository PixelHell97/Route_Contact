<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="2dp"
    android:background="@drawable/round_item"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/user_ic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/forth_color"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/user_ic"
        app:layout_constraintTop_toTopOf="@id/user_ic"
        tools:text="Contact Name"/>

    <TextView
        android:id="@+id/contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/national_code"
        android:textColor="@color/third_color"
        app:layout_constraintBottom_toBottomOf="@+id/user_ic"
        app:layout_constraintStart_toEndOf="@id/user_ic"
        app:layout_constraintTop_toBottomOf="@id/contact_name" />

</androidx.constraintlayout.widget.ConstraintLayout>